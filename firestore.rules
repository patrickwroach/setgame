rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/admin_users/$(request.auth.token.email.lower()));
    }
    
    // Admin users collection - only readable by authenticated users
    match /admin_users/{email} {
      allow read: if request.auth != null;
      allow write: if false; // Only manually created via Firebase Console
    }
    
    // Invite codes - anyone can read hash for validation, only admins can write
    match /invite_codes/{docId} {
      allow read: if true; // Can read hash publicly, actual code protected by client logic
      allow write: if isAdmin();
    }
    
    // Sign-up attempts tracking (for rate limiting)
    match /signup_attempts/{ip} {
      allow read, write: if true; // Public for client-side rate limiting
    }
    
    // Daily completions
    match /daily_completions/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users collection (keyed by UID)
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    
    // User profiles (optional - for display names, etc.)
    match /user_profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
